<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/itemLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/itemImage"
        android:layout_marginBottom="3dp"
        android:src="@drawable/missing"
        android:layout_marginTop="8dp"
        android:maxHeight="56dp"
        android:maxWidth="44dp"
        android:minWidth="44dp"
        android:minHeight="56dp"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemText"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="3dp"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:id="@+id/itemButton1"
            android:background="#FF888888"
            android:singleLine="false"
            android:textSize="10sp"
            android:layout_marginRight="2dp" />

        <Button
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:id="@+id/itemButton2"
            android:background="#FF888888"
            android:layout_marginLeft="1dp"
            android:textSize="10sp" />

    </LinearLayout>

    <Button
        android:layout_width="73dp"
        android:layout_height="40dp"
        android:id="@+id/itemButton3"
        android:background="#FF888888"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:id="@+id/itemButton4"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:text="@string/delete_items_button" />

        <Button
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:id="@+id/itemButton5"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:textSize="10sp"
            android:text="@string/buy_item_button" />

    </LinearLayout>



</LinearLayout>