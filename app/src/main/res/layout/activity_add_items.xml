<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fangman.austin.thecollector.AddItemsActivity"
    android:background="@drawable/background">

    <TextView android:text="@string/add_items_heading" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:id="@+id/addItemsHeader"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextItemName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:hint="Name"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:focusable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_items_button"
        android:id="@+id/addItemsButton"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/editTextItemName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_name_error"
        android:id="@+id/emptyNameError"
        android:layout_below="@+id/addItemsButton"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_red_light"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_items_home_button"
        android:id="@+id/addItemsHomeButton"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/addItemsButton"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addItemProgress"
        android:layout_below="@+id/editTextItemName"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_item_message"
        android:id="@+id/addItemMessage"
        android:layout_below="@+id/addItemsButton"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_items_image_button"
        android:id="@+id/addImageButton"
        android:layout_below="@+id/editTextItemName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_items_image_message"
        android:id="@+id/addImageMessage"
        android:layout_alignTop="@+id/addImageButton"
        android:layout_toRightOf="@+id/addImageButton"
        android:layout_toEndOf="@+id/addImageButton"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</RelativeLayout>
